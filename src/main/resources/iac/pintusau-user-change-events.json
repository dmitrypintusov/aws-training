{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Pintusau Banking System: user change event table",
  "Resources": {
    "UserTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "Pintusau-user-change-events",
        "AttributeDefinitions": [
          {
            "AttributeName": "entity_change_event",
            "AttributeType": "S"
          },
          {
            "AttributeName": "event_timestamp",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "entity_change_event",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "event_timestamp",
            "KeyType": "RANGE"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 5,
          "WriteCapacityUnits": 5
        }
      }
    }
  }
}